.collection {
 }
.collection .title {
  line-height: 80rpx;
  font-size: 35rpx;
  padding-left: 25rpx;
  border-bottom:  1rpx solid #aaa;
  
 }
.collection .block {
  border-bottom: 1rpx solid #aaa;
  width: 100vw;
  padding:20rpx 35rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.collection .info text{
  /*display: inline-block;*/
}
.collection .block .info {
  height: 70rpx;
  line-height: 70rpx;
  padding-right: 45rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  
}
.collection .block .info .name{
  font-size: 35rpx;
  font-weight: 600;
}
.collection .block .info .state{
  padding:0 25rpx;
  height: 45rpx;
  color: #fff;
  line-height: 45rpx;
  border-radius:30rpx;
}
.collection .block .info .pending{
  background: #36b4e5;
  
}
.collection .block .introBox{
  /*display: flex;*/
  
  
}
/*.collection .block .introBox .title{
  width: 100rpx;
  
}*/
.collection .block .introBox .messageBox{
  
  margin-bottom: 10rpx;
  
}
.collection .block .introBox .messageBox text{
  color: #636363;
  font-size: 26rpx;
  line-height: 32rpx;
  
}
.collection .block .iconLine{
  display: flex;
}
/*icon 爱心*/
.collection .block .iconBox {
  /*margin-left: 20rpx;*/
  display: flex;
  justify-content: space-around;
  align-items: center;
  
}
.collection .block .iconBox:nth-child(2) {
  margin-left: 30rpx;
}

.collection .block .iconBox .icon{
  width: 32rpx;
  margin-right: 4rpx;
  height: 28rpx;
}
.collection .block .iconBox .collect{
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;

}
.collection .block .iconBox .uncollect{
  background: url('http://139.196.228.104:8045/images/11.png?v=1') no-repeat;
  background-size: 100% 100%;
}
.collection .block .iconBox .down{
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}